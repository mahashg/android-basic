<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mgupta3.application_1.VideoViewer"
    android:orientation="vertical"
    android:background="#d418376e">

    <Button android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_button"
        android:onClick="next"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                                          "
        android:layout_weight="0"/>

    <Button android:id="@+id/previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_button"
        android:onClick="previous"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <TextView android:id="@+id/joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textColor="#ffff3922"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:singleLine="false"
        android:textSize="@dimen/joke_size" />

</LinearLayout>
